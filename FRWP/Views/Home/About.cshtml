@{@model IEnumerable<FRWP.ViewModels.PlayerCreatedDateGroup>

    
        ViewBag.Title = "Player Statistics";

        <h2>Player - Starting Date Statistics</h2>

        <table>
            <tr>
                <th>
                    Player Starting Date
                </th>
                <th>
                    Number of Players
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @item.PlayerCount
                    </td>
                </tr>
            }
        </table>
        }

